@model PañaleraUpalala.Models.Marca

@{
    ViewBag.Title = "Detalle";
}

<h2 class="text-center">Detalle</h2>

<div>
    <h4>Marca</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Marca:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.marca)
        </dd>

        <dt>
            Descripcion
        </dt>

        <dd>
            @Html.DisplayFor(model => model.descripion)
        </dd>

