@model IEnumerable<PañaleraUpalala.Models.Producto>

@{
    ViewBag.Title = "Productos";
}

<h2 class="text-center">Productos</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.categoria)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.marca)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.talle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.costo)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @(ViewBag.db.Categorias.Find(item.categoriaId).categoria)
            </td>
            <td>
                @(ViewBag.db.Marcas.Find(item.marcaId).marca)
            </td>
            <td>
                @(ViewBag.db.Talles.Find(item.talleId).talle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.costo)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.id })
            </td>
        </tr>
    }

</table>
<hr />
<div>
    @Html.ActionLink("Agregar", "Create", new { }, new { @class = "btn btn-default" })
</div>
