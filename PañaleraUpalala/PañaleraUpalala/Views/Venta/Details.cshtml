@model PañaleraUpalala.Models.VentaCreateView

@{
    ViewBag.Title = "Detalles";
}

<h2>DETALLE DE VENTA</h2>

<div>
    <h4>Venta</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.cliente.nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cliente.nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.fecha)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fecha)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.pago)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.pago)
        </dd>

    </dl>
</div>

<div>
    <h2 class="text-center">Productos</h2>

    <table class="table">
        <tr>
            <th>
                Producto
            </th>
            <th>
                Cantidad
            </th>
            <th>
                Precio
            </th>
            <th>
                Total
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.productos)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductoDesc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cantidad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.precio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
            </tr>
        }
    </table>
    <hr />
</div>

<div class="form-group">
    @Html.ActionLink("Editar", "Edit", new { id = Model.id }, new { @class = "btn btn-default" })
    @Html.ActionLink("Volver", "Index", new { }, new { @class = "btn btn-default" })
</div>
