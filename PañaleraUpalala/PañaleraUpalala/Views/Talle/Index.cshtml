@model IEnumerable<PañaleraUpalala.Models.Talle>

@{
    ViewBag.Title = "Talles";
}

<h2 class="text-center">Talles</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.talle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descripcion)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.talle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descripcion)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
            @Html.ActionLink("Detalles", "Details", new { id = item.id }) |
            @Html.ActionLink("Eliminar", "Delete", new { id = item.id })
        </td>
    </tr>
    }

</table>
<hr />
<div>
    @Html.ActionLink("Agregar", "Create", new { }, new { @class = "btn btn-default" })
</div>